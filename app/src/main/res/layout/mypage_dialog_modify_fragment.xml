<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mypage_dialog_modify_Fragment">

    <?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mypagediamodify_const_out"
        android:layout_width="300dp"
        android:layout_height="500dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mypagediamodify_img_backgroundprofile"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/img_mypage_backgroundprofile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mypagediamodify_btn_background_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_mypagemodify_changeimage"
            android:background="@drawable/mypage_profile_image_circle_kit"
            android:padding="10dp"
            android:alpha="0.5"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_mypagemodify_x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mypagediamodify_img_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/mypage_profile_image_circle_kit"
            android:padding="15dp"
            android:src="@drawable/img_mypage_profile"
            app:layout_constraintBottom_toBottomOf="@+id/mypagediamodify_img_backgroundprofile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mypagediamodify_img_backgroundprofile"
            tools:layout_editor_absoluteY="140dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mypagediamodify_btn_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="0.5"
            android:background="@drawable/mypage_profile_image_circle_kit"
            android:padding="10dp"
            android:src="@drawable/ic_mypagemodify_changeimage"
            app:layout_constraintBottom_toBottomOf="@+id/mypagediamodify_img_profile"
            app:layout_constraintEnd_toEndOf="@+id/mypagediamodify_img_profile"
            app:layout_constraintStart_toStartOf="@+id/mypagediamodify_img_profile"
            app:layout_constraintTop_toTopOf="@+id/mypagediamodify_img_profile" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mypagediamodify_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="이름"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mypagediamodify_img_profile" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toTopOf="@+id/mypagediamodify_txt_status_message"
            app:layout_constraintStart_toEndOf="@+id/mypagediamodify_txt_name"
            app:layout_constraintTop_toTopOf="@+id/mypagediamodify_txt_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mypagediamodify_txt_status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상태\n메세지"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/mypagediamodify_txt_name"
            app:layout_constraintStart_toStartOf="@+id/mypagediamodify_txt_name"
            app:layout_constraintTop_toBottomOf="@+id/mypagediamodify_txt_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>