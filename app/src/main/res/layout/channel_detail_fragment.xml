<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChannelDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/channel_detail_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mint"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageButton
            android:id="@+id/channel_detail_btn_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/detail_btn_back"
            android:scaleType="fitXY"
            android:padding="15dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/channel_detail_view"
            app:layout_constraintBottom_toBottomOf="@id/channel_detail_view"
            />
        
        <TextView
            android:id="@+id/channel_detail_txt_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Channel Name"
            android:textSize="20sp"
            android:textStyle="bold"

            app:layout_constraintTop_toTopOf="@id/channel_detail_view"
            app:layout_constraintBottom_toBottomOf="@id/channel_detail_view"
            app:layout_constraintStart_toEndOf="@id/channel_detail_btn_back"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/detail_img_thumnail"
            app:layout_constraintTop_toBottomOf="@id/channel_detail_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>